import json 
import boto3
from decimal import Decimal

client = boto3.client('dynamodb')
dynamodb = boto3.resource("dynamodb")
table = dynamodb.Table('tim-crud')  
tableName = 'tim-crud' 

def lambda_handler(event, context):
    print(event)
    body = {}
    statusCode = 200
    headers = {
        "Content-Type": "application/json"
    }

    try:
        # DELETE items 
        if event['routeKey'] == "DELETE /items/{id}":
            table.delete_item(
                Key={'id': event['pathParameters']['id']}
            )
            body = 'Deleted items with id ' + event['pathParameters']['id']
        
        # GET items by id
        elif event['routeKey'] == "GET /items/{id}":
            body = table.get_item(
                Key={'id': event['pathParameters']['id']}
            )
            body = body.get("Item", {})
            if body:
                responseBody = {
                    'id': body['id'], 
                    'description': body['description'], 
                    'status': body['status']
                }
                body = responseBody
            else:
                body = "items not found"
        
        # GET all items 
        elif event['routeKey'] == "GET /items":
            body = table.scan()
            body = body["Items"]
            print("items----")
            print(body)
            responseBody = []
            for items in body:
                responseItems = {
                    'id': items['id'], 
                    'description': items['description'], 
                    'status': items['status']
                }
                responseBody.append(responseItems)
            body = responseBody

        # PUT (create/update)items (IMA)
        elif event['routeKey'] == "PUT /items":
            requestJSON = json.loads(event['body'])
            table.put_item(
                Item={
                    'id': requestJSON['id'],  # ID of the items
                    'description': requestJSON['description'],  # items description
                    'status': requestJSON['status']  # items status (e.g., 'completed' or 'pending')
                }
            )
            body = 'Put items with id ' + requestJSON['id']